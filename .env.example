# Predictive ETA Calculator Pipeline Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================

# Snowflake Account (required)
SNOWFLAKE_ACCOUNT=your_account.region.cloud

# Authentication - Use either password OR private key
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/private_key.pem

# Database settings
SNOWFLAKE_ROLE=PREDICTIVE_ETA_ETL_ROLE
SNOWFLAKE_WAREHOUSE=PREDICTIVE_ETA_WH
SNOWFLAKE_DATABASE=PREDICTIVE_ETA
SNOWFLAKE_SCHEMA_RAW=RAW
SNOWFLAKE_SCHEMA_CORE=CORE

# =============================================================================
# ROUTING PROVIDER CONFIGURATION
# =============================================================================

# Primary provider (osrm, google, here)
PROVIDER=osrm

# OSRM Configuration (free, no API key required)
OSRM_BASE_URL=http://router.project-osrm.org

# Google Maps API (optional - requires API key and billing)
# GOOGLE_API_KEY=your_google_maps_api_key

# HERE Maps API (optional - requires API key and billing)
# HERE_API_KEY=your_here_maps_api_key

# Rate limiting and retry settings
REQUESTS_PER_SECOND=5
MAX_RETRIES=3
BACKOFF_FACTOR=1.0
TIMEOUT_SECONDS=30

# =============================================================================
# H3 GRID CONFIGURATION
# =============================================================================

# H3 resolution (0-15, recommended: 7)
H3_RESOLUTION=7

# City configuration
CITY_NAME=Dubai

# City bounding box: min_lat,min_lng,max_lat,max_lng
# Dubai example
CITY_BBOX=24.9,54.8,25.4,55.6

# Other city examples (uncomment and update CITY_NAME accordingly):
# New York: 40.4774,-74.2591,40.9176,-73.7004
# London: 51.2868,-0.5103,51.6918,0.3340
# Singapore: 1.1304,103.6026,1.4784,104.0120
# Paris: 48.8155,2.2241,48.9021,2.4699
# Tokyo: 35.5322,139.3796,35.8177,139.9190
# San Francisco: 37.7081,-122.5125,37.8199,-122.3574

# Neighbor discovery distances (k-ring approximations)
NEIGHBOR_DISTANCE_1KM=1
NEIGHBOR_DISTANCE_3KM=2
NEIGHBOR_DISTANCE_8KM=4

# =============================================================================
# ETA CALCULATION CONFIGURATION
# =============================================================================

# ETA calculation mode (direct, path_sum)
ETA_MODE=direct

# Rain weather uplift percentage (0.0 = no uplift, 0.15 = 15% increase)
RAIN_UPLIFT_PCT=0.15

# Processing batch settings
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable structured JSON logging (true, false)
ENABLE_STRUCTURED_LOGGING=true

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment name (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (true, false)
DEBUG=false
